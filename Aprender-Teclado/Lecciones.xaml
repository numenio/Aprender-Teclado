<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="Aprender_Teclado.Lecciones"
	x:Name="Window"
	Title="Lecciones"
	Width="317" Height="457" Background="Black" KeyUp="Window_KeyUp" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" Icon="input_keyboard.ico" ResizeMode="CanMinimize">

	<Grid x:Name="LayoutRoot">
		<ListBox x:Name="listLecciones" Margin="41,79,46,107" KeyDown="listLecciones_KeyDown" SelectedIndex="-1" Background="{x:Null}" BorderBrush="{x:Null}" Width="224" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled" MouseLeftButtonUp="listLecciones_MouseDoubleClick" />
		<TextBlock Height="33" Margin="41,33,46,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF3F50E"><Run Language="es-es" Text="Elija la lección a realizar de la actividad que recién eligió:"/><LineBreak/><Run Language="es-es"/></TextBlock>
		<Button x:Name="btnEmpezar" Content="Empezar la lección" Height="23" Margin="41,0,46,63" VerticalAlignment="Bottom" Focusable="False" Click="btnEmpezar_Click" />
        <TextBlock FontSize="10" Foreground="#FFE9F50C" Height="27" Margin="34,0,24,7" TextWrapping="Wrap" VerticalAlignment="Bottom"><Run Language="es-es" Text="Seleccionar lección: FLECHAS. Elegir lección: ENTER. Volver a las actividades: ESCAPE"/></TextBlock>
    </Grid>
</Window>